<% provide(:title, "Posts") %>
<h1>Posts</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
 
    <%= @posts.each do |post| %>
     <div class="inner-posts">
    <% if @current_user.signed_in? %>
        <p>
      <%= @post.user.name %>
      </p>
    <% else %>
        <p>
        Login to see the author
        </p>
    <% end %>
     <p>
      <%= post.title %>
      </p>
      <p>
      <%= post.content %> 
      </p>
    </div>
    <% end %>
    
  </div>
</div>
